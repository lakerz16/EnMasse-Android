<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#28ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#28000000"/>
        
        <ImageView
	        android:id="@+id/eventIcon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/eventName"
	        android:layout_alignBottom="@+id/eventDescription"
	        android:src="@drawable/ic_action_location_dark"
	        android:scaleType="fitCenter"
	        android:layout_marginLeft="9dp"
	        android:layout_centerVertical="true"
	        />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/eventName"
	        android:layout_alignBottom="@+id/eventDescription"
	        android:src="@drawable/ic_action_next_dark"
	        android:scaleType="fitCenter"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:padding="4dp"
	        />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_toRightOf="@+id/eventIcon"
	        android:layout_marginLeft="9dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:layout_centerVertical="true"
	        >
	        
	        <TextView
		    	android:id="@+id/eventName"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginBottom="0dp"
		    	android:textColor="#ffffff"
		    	style="@android:style/TextAppearance.Large"
		    	android:textIsSelectable="false"
		    	/>
	        
	        <TextView
	            android:id="@+id/eventDescription"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="0dp"
	            android:textColor="#d0d0d0"
	            android:paddingBottom="3dp"
	            style="@android:style/TextAppearance.Small"
	            android:textIsSelectable="false"
	            />
	        
	    </LinearLayout>
</RelativeLayout>